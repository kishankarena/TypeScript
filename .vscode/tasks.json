{
    "version": "2.0.0",
    "command": "tsc",
    "args": ["-w","-p","."],
    "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
    },
    "isBackground": true,
    "problemMatcher": "$tsc-watch",
    "tasks": [
    {
    "type": "typescript",
    "tsconfig": "tsconfig.json",
    "option": "watch",
    "problemMatcher": [
    "$tsc-watch"
    ],
    "group": "build",
    "label": "tsc: watch - tsconfig.json"
    }
    ]
    }